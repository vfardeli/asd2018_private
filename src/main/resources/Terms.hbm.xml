<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.alignprivate.asd.model.Terms" table="Terms">

		<meta attribute="class-description">
			This class contains the Term detail.
		</meta>
		<id name="termId" column="TermId" type="int">
			<generator class="native" />
		</id>

		<property name="term" column="Term">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">org.alignprivate.asd.enumeration.Term</param>
				<param name="type">12</param>
				<param name="useNamed">true</param>
			</type>
		</property>
		
		<property name="termYear" column="TermYear" type="int" />
		
		<property name="termType" column="TermType">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">org.alignprivate.asd.enumeration.TermType</param>
				<param name="type">12</param>
				<param name="useNamed">true</param>
			</type>
		</property>

	</class>
</hibernate-mapping>