<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "org.alignprivate.asd.model.Companies" table="Companies">

        <meta attribute = "class-description">
            This class contains the Company detail.
        </meta>
        <id name = "companyId" column="CompanyId" type="int">
            <generator class="native"/>
        </id>

        <property name = "companyName" column="CompanyName" type="string" />

    </class>
</hibernate-mapping>