<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "org.alignprivate.asd.model.WorkExperiences" table="WorkExperiences">

        <meta attribute = "class-description">
            This class contains the Work Experience detail.
        </meta>
        <id name = "workExperienceId" column="WorkExperienceId" type="int">
            <generator class="native"/>
        </id>

        <property name = "startDate" column="StartDate" type="date" />

        <property name = "endDate" column="EndDate" type="date" />

        <property name = "currentJob" column="CurrentJob" type="boolean" />

        <property name = "title" column="Title" type="string" />

        <property name = "description" column="Description" type="string" />

        <many-to-one name="student" class="org.alignprivate.asd.model.Students"
                     column="NeuId" />

        <many-to-one name="company" class="org.alignprivate.asd.model.Companies"
                     column="CompanyId" />
    </class>
</hibernate-mapping>